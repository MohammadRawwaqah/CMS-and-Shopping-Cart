@model IEnumerable<CmsShoppingCart.Models.ViewModels.Pages.Shop.CategoryVM>

<h3>Categories</h3>

<div>


    @foreach (var item in Model)
    {
        if ((string)TempData["Title"] == item.Name)
        {
            <a href="/shop/category/@item.Slug.ToLower()" class="list-group-item active">@item.Name</a>

        }
        else
        {
            <a href="/shop/category/@item.Slug.ToLower()" class="list-group-item">@item.Name</a>

        }
    }



</div>

